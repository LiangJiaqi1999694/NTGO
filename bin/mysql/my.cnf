[mysqld]
character-set-server=utf8
log-bin=mysql-bin
server-id=1
pid-file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
datadir         = /var/lib/mysql
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
symbolic-links=0
secure_file_priv =
wait_timeout=120 #Mysql关闭非交互连接前的等待时间，单位是秒，默认是8小时，建议不要将该参数设置超过24小时，即86400
interactive_timeout=120 #Mysql关闭交互连接前的等待时间，单位是秒，默认是8小时，建议不要将该参数设置超过24小时，即86400
default-time_zone = '+8:00'
skip-external-locking
skip-name-resolve #如果这个参数设为OFF，则MySQL服务在检查客户端连接的时候会解析主机名；如果这个参数设为ON，则MySQL服务只会使用IP，在这种情况下，授权表中的Host字段必须是IP地址或localhost。这个参数默认是关闭的
open_files_limit = 10240 #操作系统允许MySQL服务打开的文件数量
max_connections = 1000 #允许客户端并发连接的最大数量，默认值是151，一般将该参数设置为500-2000
max_connect_errors = 6000 #如果客户端尝试连接的错误数量超过这个参数设置的值，则服务器不再接受新的客户端连接。可以通过清空主机的缓存来解除服务器的这种阻止新连接的状态，通过FLUSH HOSTS或mysqladmin flush-hosts命令来清空缓存。这个参数的默认值是100，一般将该参数设置为100000。
table_open_cache = 2048 #所有线程能打开的表的数量
max_allowed_packet = 40m #网络传输时单个数据包的大小。
sort_buffer_size = 2M #每个会话执行排序操作所分配的内存大小。
join_buffer_size = 1M #MySQL服务器用来作普通索引扫描、范围索引扫描和不使用索引而执行全表扫描这些操作所用的缓存大小
thread_cache_size = 400 #MySQL服务缓存以重用的线程数。当客户端断开连接的时候，如果线程缓存没有使用满，则客户端的线程被放入缓存中。
query_cache_size = 64M #为查询结果所分配的缓存。默认这个参数是没有开启的。这个参数的值应设为整数的1024倍，如果设为其他值则会被自动调整为接近此数值的1024倍。这个参数最小需要40KB。建议不要将此参数设为大于256MB，以免占用太多的系统内存。
transaction_isolation = READ-COMMITTED
tmp_table_size = 128M #内部内存临时表的最大内存。
max_heap_table_size = 128M #这个参数设置用户创建的MEMORY表允许增长的最大容量
log-bin = mysql-bin
sync-binlog = 1
binlog_format = ROW
binlog_cache_size = 1M
key_buffer_size = 128M
read_buffer_size = 2M #如果数据库有很多顺序读，可以增加这个参数
read_rnd_buffer_size = 4M
bulk_insert_buffer_size = 64M
lower_case_table_names = 1
explicit_defaults_for_timestamp=true
skip_name_resolve = ON
event_scheduler = ON
log_bin_trust_function_creators = 1
innodb_buffer_pool_size = 512M #InnDB存储引擎缓存表和索引数据所使用的内存大小
innodb_flush_log_at_trx_commit = 1 #这个参数的默认值为1，代表数据库遵照完整的ACID模型，每当事务提交时，InnoDB日志缓存中的内容均会被刷新到日志文件，并写入到磁盘
innodb_file_per_table = 1 #当这个参数启用的时候，InnoDB会将新建表的数据和索引单独存放在.ibd格式的文件中，而不是存放在系统表空间中。
innodb_log_buffer_size = 4M #InnoDB写入磁盘日志文件所使用的缓存字节大小
innodb_log_file_size = 256M #日志组中每个日志文件的字节大小。所有日志文件的大小(innodb_log_file_size * innodb_log_files_in_group(这个参数的默认值和推荐值均是2))不能超过512GB
innodb_max_dirty_pages_pct = 90 #当Innodb缓存池中脏页所占的百分比达到这个参数的值时，InnoDB会从缓存中向磁盘写入数据。默认值是75。
innodb_read_io_threads = 4
innodb_write_io_threads = 4
